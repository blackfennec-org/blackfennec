using Gtk 4.0;
using Adw 1;

template FileView : Adw.PreferencesGroup {
  title: _("File");
  margin-start: 8;
  margin-end: 8;
  margin-top: 8;
  margin-bottom: 8;

  Adw.EntryRow _file_path {
    title: _("Path");
    editable: true;

    Button _file_chooser {
      icon-name: "folder-open-symbolic";
      clicked => _on_choose_file();
      valign: center;
      styles [
        "circular",
      ]
    }
  }

  Adw.EntryRow _mime_type {
    title: _("MIME Type");
  }
}