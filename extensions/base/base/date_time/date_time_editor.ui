<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DateTimeEditor" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkEntry" id="_hour">
            <property name="input-purpose">digits</property>
            <property name="tooltip-text" translatable="true">Hour digits</property>
            <signal name="changed" handler="_on_hour_changed"/>
            <property name="overwrite-mode">true</property>
            <property name="xalign">0.5</property>
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="text">00</property>
            <property name="max-length">2</property>
            <property name="max-width-chars">2</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">:</property>
            <property name="focusable">false</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="_minute">
            <property name="input-purpose">digits</property>
            <property name="tooltip-text" translatable="true">Minute digits</property>
            <signal name="changed" handler="_on_minute_changed"/>
            <property name="overwrite-mode">true</property>
            <property name="xalign">0.5</property>
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="text">00</property>
            <property name="max-length">2</property>
            <property name="max-width-chars">2</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">:</property>
            <property name="focusable">false</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="_second">
            <property name="input-purpose">digits</property>
            <property name="tooltip-text" translatable="true">Second digits</property>
            <signal name="changed" handler="_on_second_changed"/>
            <property name="overwrite-mode">true</property>
            <property name="xalign">0.5</property>
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="text">00</property>
            <property name="max-length">2</property>
            <property name="max-width-chars">2</property>
            <style>
              <class name="title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label" translatable="true">Now</property>
            <property name="valign">end</property>
            <property name="margin-start">12</property>
            <signal name="clicked" handler="_on_set_to_now"/>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkCalendar" id="_date_chooser"></object>
    </child>
  </template>
</interface>