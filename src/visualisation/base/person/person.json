{
    "super": { "$ref": "bftype://Map"},
    "type": "Person",
    "required": [
        "first_name",
        "last_name"
    ],
    "properties": {
        "courtesy_title": {
            "type": "String"
        },
        "first_name": {
            "type": "String"
        },
        "middle_name": {
            "type": "String"
        },
        "last_name": {
            "type": "String"
        },
        "suffix": {
            "type": "String"
        },
        "personal_photo": {
            "super" : { "$ref": "bftype://Photo" },
            "properties": {
                "path": {
                    "default": "bfext://base/person/person.png"
                }
            }
        },
        "home_address": {
            "$ref": "bftype://Address"
        },
        "gender": {
            "type": "String"
        },
        "sex": {
            "type": "String"
        },
        "marital_status": {
            "type": "String"
        },
        "nationality": {
            "type": "String"
        }
    }
}