<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="FileView" parent="AdwBin">
    <property name="visible">true</property>
    <property name="focusable">false</property>
    <child>
      <object class="GtkBox" id="_item_container">
        <property name="orientation">vertical</property>
        <property name="spacing">2</property>
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkImage">
                <property name="file">src/visualisation/base/file/file.png</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_file_title">
                <property name="label" translatable="true">File</property>
              </object>
            </child>
            <style>
              <class name="base-title"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="_file_path_line">
            <property name="spacing">2</property>
            <child>
              <object class="GtkButton" id="_file_path_choose">
                <property name="focusable">true</property>
                <property name="receives-default">true</property>
                <signal name="clicked" handler="on_choose_clicked"/>
                <child>
                  <object class="GtkImage">
                    <property name="file">src/visualisation/base/folder-16.png</property>
                  </object>
                </child>
                <style>
                  <class name="base-button"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_file_path_value">
                <property name="hexpand">true</property>
                <property name="focusable">true</property>
                <property name="label" translatable="true">&lt;value-here&gt;</property>
                <property name="selectable">true</property>
                <property name="ellipsize">start</property>
                <property name="xalign">0</property>
                <style>
                  <class name="base-value"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_file_path_key">
                <property name="label" translatable="true">Path:</property>
                <property name="width-chars">6</property>
                <property name="xalign">0</property>
                <style>
                  <class name="base-key"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="_file_type_line">
            <property name="spacing">2</property>
            <child>
              <object class="GtkLabel" id="_file_type_key">
                <property name="label" translatable="true">Type:</property>
                <property name="width-chars">6</property>
                <property name="xalign">0</property>
                <style>
                  <class name="base-key"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_file_type_value">
                <property name="hexpand">true</property>
                <property name="focusable">true</property>
                <property name="label" translatable="true">&lt;value-here&gt;</property>
                <property name="selectable">true</property>
                <property name="xalign">0</property>
                <style>
                  <class name="base-value"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <style>
          <class name="base-box"/>
        </style>
      </object>
    </child>
  </template>
</interface>