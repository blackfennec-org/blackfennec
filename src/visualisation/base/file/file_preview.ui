<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="FilePreview" parent="AdwBin">
    <property name="visible">true</property>
    <property name="focusable">false</property>
    <child>
      <object class="GtkEventBox">
        <property name="visible">True</property>
        <property name="focusable">False</property>
        <signal name="button-press-event" handler="_preview_clicked"/>
        <child>
          <object class="GtkBox" id="_file_path_line">
            <property name="spacing">2</property>
            <child>
              <object class="GtkButton" id="_file_path_choose">
                <property name="focusable">true</property>
                <property name="receives-default">true</property>
                <signal name="clicked" handler="on_choose_clicked"/>
                <child>
                  <object class="GtkImage">
                    <property name="file">src/visualisation/base/folder-16.png</property>
                  </object>
                </child>
                <style>
                  <class name="base-button"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_file_path_value">
                <property name="hexpand">true</property>
                <property name="label" translatable="true">&lt;value-here&gt;</property>
                <property name="selectable">true</property>
                <property name="ellipsize">start</property>
                <property name="xalign">0</property>
                <style>
                  <class name="base-value"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>