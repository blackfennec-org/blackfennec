using Gtk 4.0;
using Adw 1;

template EditableItemView : Adw.EntryRow {
    title: "key";
    activatable: true;
    show_apply_button: true;
    apply => _on_apply();

    Button _delete {
        halign: end;
        valign: center;
        icon-name: "list-remove-symbolic";
        clicked => _on_delete();
        styles [
          "destructive-action",
          "circular",
        ]
    }
}